{% extends 'base.html.twig' %}

{% block title %}Contenu
{% endblock %}

{% block body %}
	<h1 class="m-3">Contenu</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ content.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ content.articleTitle }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ content.articleContent }}</td>
			</tr>
			<tr>
				<th>Page</th>
				<td>{{ content.page }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ content.picture }}</td>
			</tr>

			<tr>
				<th>Lien</th>
				<td>{{ content.link }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('admin_content_index') }}">Retour</a>

	<a class="btn btn-brown" href="{{ path('admin_content_edit', {'id': content.id}) }}">Modifier</a>

	{{ include('admin_content/_delete_form.html.twig') }}
{% endblock %}
