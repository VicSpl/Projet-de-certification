{% extends 'base.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block body %}
	<h1>Mon profil</h1>

	<table class="table table-sm">
		<tbody>
			{# <tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr> #}
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ user.address }}</td>
			</tr>
			<tr>
				<th>Code postale</th>
				<td>{{ user.zipCode }}</td>
			</tr>
			<tr>
				<th>Villz</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>Téléphone</th>
				<td>{{ user.phone }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('profile_edit') }}">edit</a>

	{{ include('profile/_delete_form.html.twig') }}
{% endblock %}
