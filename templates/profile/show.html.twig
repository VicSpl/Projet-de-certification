{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table table-sm">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ user.address }}</td>
			</tr>
			<tr>
				<th>ZipCode</th>
				<td>{{ user.zipCode }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ user.phone }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('profile_edit') }}">edit</a>

	{{ include('profile/_delete_form.html.twig') }}
{% endblock %}
