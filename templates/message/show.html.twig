{% extends 'base.html.twig' %}

{% block title %}
	Message -
	{{ message.subject }}
{% endblock %}

{% block body %}
	<h1>Message -
		{{ message.subject }}</h1>

	<table class="table">
		<tbody>
			{% if message.sender == app.user %}
				<tr>
					<th>Destinataire</th>
					<td>{{ message.recipient.firstname  }}
						{{ message.recipient.lastname }}</td>
				</tr>
			{% endif %}
			{% if message.recipient == app.user %}
				<tr>
					<th>Emetteur</th>
					<td>{{ message.sender.firstname }}
						{{ message.sender.lastname }}</td>
				</tr>
			{% endif %}
			<tr>
				<th>Objet</th>
				<td>{{ message.subject }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ message.content }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ message.createdAt | date("d/m/Y H:i:s") }}</td>
			</tr>
		</tbody>
	</table>


	{% if message.recipient == app.user %}
		<a href="{{path('message_new', {'id' : message.sender.id})}}">RÃ©pondre</a>
	{% endif %}

	<a href="
		{% if message.sender == app.user %}
		{{ path('sent_index') }}
		{% endif %}
		{% if message.recipient == app.user %}
		{{ path('recieve_index') }}
		{% endif %}
	">Retour</a>
	{{ include('message/_delete_form.html.twig') }}
{% endblock %}
