{% extends 'base.html.twig' %}

{% block title %}Message index
{% endblock %}

{% block body %}
	<h1>Message index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Subject</th>
				<th>Content</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>

			{% if recieved_messages is defined %}
				{% for message in recieved_messages %}

					<tr>
						<td>{{ message.id }}</td>
						<td>{{ message.subject }}</td>
						<td>{{ message.content }}</td>
						<td>
							<a href="{{ path('message_show', {'id': message.id}) }}">show</a>
							<a href="{{ path('message_edit', {'id': message.id}) }}">show</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			{% endif %}


			{% if sent_messages  is defined %}
				{% for message in sent_messages %}
					<tr>
						<td>{{ message.id }}</td>
						<td>{{ message.subject }}</td>
						<td>{{ message.content }}</td>
						<td>
							<a href="{{ path('message_show', {'id': message.id}) }}">show</a>
							<a href="{{ path('message_edit', {'id': message.id}) }}">show</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			{% endif %}
		</tbody>
	</table>
	
{% endblock %}
