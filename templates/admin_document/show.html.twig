{% extends 'base.html.twig' %}

{% block title %}Document
{% endblock %}

{% block body %}
	<div class="form-site">
		<h1>Document</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ document.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ document.title }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-color m-3" href="{{ path('admin_document_index') }}">Retour</a>

		<a class="btn btn-color m-3" href="{{ path('admin_document_edit', {'id': document.id}) }}">Modifier</a>

		{{ include('admin_document/_delete_form.html.twig') }}
	</div>
{% endblock %}
