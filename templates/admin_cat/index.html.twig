{% extends 'base.html.twig' %}

{% block title %}Cat index
{% endblock %}

{% block body %}
	<h1>Cat index</h1>
	<div class="cats-container">
		{% for cat in cats %}
			<div class="card" style="width: 18rem;">
				<img src="{{ asset('./uploads/images/') }}{{cat.imageFilename}}" alt="cat"/>
				<div class="card-body">
					<p class="card-text">
						<ul>
							<td></td>
							<li>Nom :
								{{ cat.name }}</li>
							<li>Date de naissance :
								{{ cat.dob ? cat.dob|date('Y-m-d') : '' }}</li>
							<li>Ville :
								{{ cat.city }}</li>
							<li>Race :
								{{ cat.breed }}</li>
							<li>Genre :
								{{ cat.gender }}</li>
							<li>Robe
								{{ cat.coat}}</li>
							<li>Yeux :
								{{cat.eyeColor}}</li>
							<li>Poids :
								{{ cat.weight }}</li>
							<li>Taille :
								{{ cat.size }}</li>
							<li>Description :
								{{ cat.description }}</li>
						</ul>
						<ul class="no-puce">
							<li>Coordonnées du propriétaire :</li>
							<li>Nom :
								{{ cat.owner.lastname }}</li>
							<li>Prénom :
								{{ cat.owner.firstname }}</li>
							<li>Adresse :
								{{ cat.owner.address }}</li>
							<li>{{ cat.owner.zipCode }}
								{{ cat.owner.city }}</li>
							<li>Numéro :
								{{ cat.owner.phone }}</li>
							<li>Email :
								<a href="{{path('message_new', {'id' : cat.owner.id})}}">{{ cat.owner.email }}</a>

							</li>
						</ul>
					</p>
					<a href="{{  path ('admin_cat_edit', {'id' : cat.id}) }}"> Editer</a>
					<a href="{{  path ('admin_cat_delete', {'id' : cat.id}) }}"> Supprimer</a>
				</div>
			</div>

		{% endfor %}
	</div>

	<a href="{{ path('admin_cat_new') }}">Create new</a>
{% endblock %}
