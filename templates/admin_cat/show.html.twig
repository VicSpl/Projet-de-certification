{% extends 'base.html.twig' %}

{% block title %}Cat
{% endblock %}

{% block body %}
<h1>Cat</h1>

{% block title %}Cat index
{% endblock %}

{% block body %}

	<h1>Profil de chat</h1>
	<div class="cats-container">
		{% for cat in cats %}
			<div class="card" style="width: 18rem;">
				<img src="{{ asset('./uploads/images/') }}{{cat.imageFilename}}" alt="cat"/>
				<div class="card-body">
					<p class="card-text">
						<ul class="no-puce">
							<li>Nom :
								{{ cat.name }}</li>
							<li>Date de naissance :
								{{ cat.dob ? cat.dob|date('Y-m-d') : '' }}</li>
							<li>Ville :
								{{ cat.city }}</li>
							<li>Race :
								{{ cat.breed }}</li>
							<li>Genre :
								{{ cat.gender }}</li>
							<li>Robe
								{{ cat.coat}}</li>
							<li>Yeux :
								{{cat.eyeColor}}</li>
							<li>Poids :
								{{ cat.weight }}</li>
							<li>Taille :
								{{ cat.size }}</li>
							<li>Description :
								{{ cat.description }}</li>
						</ul>
						<ul class="no-puce">
							<li>Coordonnées du propriétaire :</li>
							<li>Nom : Grind</li>
							<li>Prénom : Pascale</li>
							<li>Adresse : 4 rue du chemin</li>
							<li>77160 Provin</li>
							<li>Numéro : 0654xxxxxx</li>
							<li>Email : p.grind@pêche.fr</li>
						</ul>
					</p>
				</div>
			</div>

		{% endfor %}
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ cat.id }}</td>
			</tr>
			<tr>
				<th>Photo</th>
				<td><img class="catPictureDetails" src="{{ asset('./uploads/images/') }}{{cat.imageFilename}}" alt=""/></td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ cat.name }}</td>
			</tr>
			<tr>
				<th>Dob</th>
				<td>{{ cat.dob ? cat.dob|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ cat.city }}</td>
			</tr>
			<tr>
				<th>Gender</th>
				<td>{{ cat.gender }}</td>
			</tr>
			<tr>
				<th>Coat</th>
				<td>{{ cat.coat }}</td>
			</tr>
			<tr>
				<th>EyeColor</th>
				<td>{{ cat.eyeColor }}</td>
			</tr>
			<tr>
				<th>Weight</th>
				<td>{{ cat.weight }}</td>
			</tr>
			<tr>
				<th>Size</th>
				<td>{{ cat.size }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ cat.description }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('admin_cat_index') }}">back to list</a>

	<a href="{{ path('admin_cat_edit', {'id': cat.id}) }}">edit</a>

	{{ include('admin_cat/_delete_form.html.twig') }}
{% endblock %}
