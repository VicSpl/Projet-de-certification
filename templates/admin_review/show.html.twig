{% extends 'base.html.twig' %}

{% block title %}Review
{% endblock %}

{% block body %}
	<h1>Review</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ review.id }}</td>
			</tr>
			<tr>
				<th>Inspecté le</th>
				<td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Commentaire</th>
				<td>{{ review.comment }}</td>
			</tr>
			<tr>
				<th>Etat</th>
				<td>{{ review.validated ? 'Approuvé' : 'Refusé' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-color m-3" href="{{ path('admin_review_index') }}">Retour</a>

	<a class="btn btn-color m-3" href="{{ path('admin_review_edit', {'id': review.id}) }}">Modifier</a>

	{{ include('admin_review/_delete_form.html.twig') }}
{% endblock %}
