{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1 class="m-3">Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Mot de passe</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ user.address }}</td>
			</tr>
			<tr>
				<th>Code Postal</th>
				<td>{{ user.zipCode }}</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>Téléphone</th>
				<td>{{ user.phone }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('admin_user_index') }}">back to list</a>

	<a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>

	{{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
